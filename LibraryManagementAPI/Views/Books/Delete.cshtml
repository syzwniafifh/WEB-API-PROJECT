@model LibraryManagementAPI.Models.Book

<div class="delete-book-container">
    <h2 class="text-center text-danger">Delete Book</h2>
    <h3 class="text-center mt-3">Are you sure you want to delete this book?</h3>

    <div class="book-details mt-4">
        <dl class="row">
            <dt class="col-sm-4 text-end fw-bold">Book Name:</dt>
            <dd class="col-sm-8">@Model.BookName</dd>

            <dt class="col-sm-4 text-end fw-bold">Author Name:</dt>
            <dd class="col-sm-8">@Model.BookAuthor</dd>
        </dl>
    </div>

    <div class="action-buttons d-flex justify-content-center mt-4">
        <form asp-action="Delete" method="post" class="me-3">
            <input type="hidden" asp-for="BookID" />
            <button type="submit" class="btn btn-danger px-4">Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
    </div>
</div>

<style>
    .delete-book-container {
        max-width: 600px;
        margin: 30px auto;
        padding: 20px;
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-size: 1.75rem;
    }

    h3 {
        font-size: 1.25rem;
        color: #333;
    }

    .book-details dt {
        font-size: 1rem;
    }

    .book-details dd {
        font-size: 1rem;
        color: #555;
    }

    .action-buttons .btn {
        width: 120px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>


