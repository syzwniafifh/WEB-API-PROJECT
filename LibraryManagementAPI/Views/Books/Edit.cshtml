@model LibraryManagementAPI.Models.Book

<div class="edit-book-container">
    <h2 class="text-center">Edit Book Details</h2>

    <form asp-action="Edit" method="post" class="mt-4">
        <input type="hidden" asp-for="BookID" />

        <div class="form-group mb-3">
            <label asp-for="BookName" class="form-label">Book Name</label>
            <input asp-for="BookName" class="form-control" placeholder="Enter book name" />
            <span asp-validation-for="BookName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="BookAuthor" class="form-label">Author Name</label>
            <input asp-for="BookAuthor" class="form-control" placeholder="Enter author's name" />
            <span asp-validation-for="BookAuthor" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<style>
    .edit-book-container {
        max-width: 600px;
        margin: 30px auto;
        padding: 20px;
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #007bff; /* Bootstrap primary color */
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        border-radius: 4px;
        border: 1px solid #ccc;
        padding: 10px;
    }

    .btn {
        width: 120px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .text-danger {
        font-size: 0.9rem;
    }
</style>


