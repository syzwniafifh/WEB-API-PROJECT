@model IEnumerable<LibraryManagementAPI.Models.Book>

<div class="book-list-container">
    <h2 class="text-center">Books List</h2>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Book Name</th>
                <th>Author Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.BookName</td>
                    <td>@book.BookAuthor</td>
                    <td>
                        <a class="btn btn-sm btn-warning me-2" asp-action="Edit" asp-route-id="@book.BookID">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@book.BookID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end mt-3">
        <a class="btn btn-primary" asp-action="Create">Add New Book</a>
    </div>
</div>

<style>
    .book-list-container {
        max-width: 900px;
        margin: 20px auto;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    h2 {
        color: #007bff;
        margin-bottom: 20px;
    }
    .table {
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
    }
    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }
    .table thead th {
        background-color: #343a40;
        color: #fff;
    }
    .btn {
        font-size: 0.9rem;
    }
    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #212529;
    }
    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>

